    <img id="cookie" src="https://upload.wikimedia.org/wikipedia/commons/6/69/Chocolate_Chip_Cookie.jpg" alt="Keksi">
    <div id="text-container"></div>

    <audio id="sound" src="https://www.soundjay.com/human/sounds/baby-crying-01.mp3"></audio>

    <script>
        document.getElementById('cookie').addEventListener('click', function() {
            var textContainer = document.getElementById('text-container');
            var nooaText = document.createElement('div');
            nooaText.className = 'nooa-text';
            nooaText.textContent = 'NOOA';
            textContainer.appendChild(nooaText);

            var sound = document.getElementById('sound');
            sound.play();
        });
    </script>

